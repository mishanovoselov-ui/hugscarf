---
import BaseLayout from '../layouts/BaseLayout.astro';
import '../styles/global.css';
---

<BaseLayout
  title="HugScarf - Coming Soon"
  description="HugScarf is launching soon. Join the waitlist for early access and partner updates."
>
  <main class="splash">
    <header class="top-header">
      <img
        class="header-logo"
        src="/85C6CD70-D6D9-4432-A8D2-5FF0C0395941.png"
        alt="Hugscarf logo"
      />
    </header>

    <div class="video-shell">
      <video class="hero-video" autoplay muted loop playsinline controls>
        <source src="/doc_2026-02-16_15-44-51.mp4" type="video/mp4" />
        Your browser does not support the video tag.
      </video>
    </div>
  </main>
</BaseLayout>
